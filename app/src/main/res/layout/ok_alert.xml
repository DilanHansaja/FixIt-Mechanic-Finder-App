<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ok_alert_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/alert_warning" />

    <TextView
        android:id="@+id/ok_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/lato_bold"
        android:text="Warning"
        android:textAlignment="center"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/ok_alert_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/lato_regular"
        android:lineSpacingExtra="5dp"
        android:text="This email is already in use. Try another one or log in to your account."
        android:textAlignment="center"
        android:textColor="@color/light_black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/ok_alert_btn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/lato_semibold"
        android:text="Ok"
        android:textSize="18sp"
        app:cornerRadius="8dp" />

</LinearLayout>